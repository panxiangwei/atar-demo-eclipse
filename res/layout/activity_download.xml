<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp" >

    <Button
        android:id="@+id/btn_down"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="下载方式1-1" />

    <Button
        android:id="@+id/btn_down_cancle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/btn_down"
        android:text="方式1-1暂停" />

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_down"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@+id/txt_percent"
        android:max="100"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_down"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/btn_down2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/progressbar"
        android:layout_marginTop="10dp"
        android:text="下载方式1-2" />

    <Button
        android:id="@+id/btn_down_cancle2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/progressbar"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/btn_down2"
        android:text="方式1-2暂停" />

    <ProgressBar
        android:id="@+id/progressbar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_down2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@+id/txt_percent2"
        android:max="100"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_percent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_down2"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/btn_down3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/progressbar2"
        android:layout_marginTop="10dp"
        android:text="下载方式1-3" />

    <Button
        android:id="@+id/btn_down_cancle3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/progressbar2"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/btn_down2"
        android:text="方式1-3暂停" />

    <ProgressBar
        android:id="@+id/progressbar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_down3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@+id/txt_percent3"
        android:max="100"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_percent3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_down3"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/btn_down4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/progressbar3"
        android:layout_marginTop="10dp"
        android:text="下载方式3" />

</RelativeLayout>